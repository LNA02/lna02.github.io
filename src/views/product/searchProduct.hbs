<div class="search Product" style="margin:5% ;">
    <div class="row minheight">
        {{#each product}}
        <div class="title-wrap">
            <h3 class="title">All Product</h3>
        </div>
        <div class="col col-lg-3" style="margin-bottom: 20px;" >
            <a href="/product/infoProduct/{{this._id}}" style="text-decoration: none;">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap" style="height: 250px;">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.price}} USD</p>
                    <a href="/cart/addToCart/{{this._id}}" class="btn btn-raised btn-success pull-right">
                        <i class="fa fa-plus" aria-hidden="true"></i> Add to cart
                    </a>
                </div>
            </div>
            </a>          
        </div>
        {{else}}
        <h2>Nothing here</h2>
        {{/each}}
    </div>
</div>